@{
    <a asp-action="Index">Home</a>


    <form method="post" action="/calculadora/calculadora">
            <div class="mb-3">
              <div class="mb-3">
                <label for="number"></label>
                <input type="number" id="nome" name="number" class="form-control">
              </div>
              <div class="mb-3">
                <label for="number2"></label>
                <input type="number" id="number2" name="number2" class="form-control">
              </div>
              <input type="submit" class="btn btn-outline-primary mb-3" value="Calcular" />
              <div>
                 <input readonly type="text" value="@TempData["resultado"]" class="form-control"/>
              </div>
           </div>
           /*value="@ViewBag.abobora"*/ 
    </form>
}
